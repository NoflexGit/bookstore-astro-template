---
import Logo from '../Logo/Logo.astro'
---

<header class="h-14 bg-violet-600 sticky top-0 w-full">
	<div class="container mx-auto flex h-full items-center justify-between">
		<Logo />
		<nav class="hidden items-center gap-8 md:flex">
			<ul class="flex gap-6">
				<li>
					<a class="text-sm text-white transition-colors hover:text-violet-200" href="#">
						Categories</a
					>
				</li>
				<li>
					<a class="text-sm text-white transition-colors hover:text-violet-200" href="#">
						New 2023</a
					>
				</li>
				<li>
					<a class="text-sm text-white transition-colors hover:text-violet-200" href="#">
						Bestsellers</a
					>
				</li>
				<li>
					<a class="text-sm text-white transition-colors hover:text-violet-200" href="#"> Gifts</a>
				</li>
				<li>
					<a class="text-sm text-white transition-colors hover:text-violet-200" href="#">Shops</a>
				</li>
			</ul>
		</nav>
		<div class="flex items-center gap-4">
			<a
				class="rounded-md bg-violet-400 p-2 text-white hover:bg-violet-300"
				href="/wishlist"
				aria-label="Wishlist"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="h-4 w-4"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"
					></path>
				</svg>
			</a>
			<a
				class="rounded-md bg-violet-400 p-2 text-white hover:bg-violet-300"
				href="/cart"
				aria-label="Cart"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="h-4 w-4"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"
					></path>
				</svg>
			</a>
			<a
				class="rounded-md bg-violet-400 px-4 py-2 text-xs font-bold text-white hover:bg-violet-300"
				href="#">Sign In</a
			>
		</div>
	</div>
</header>
