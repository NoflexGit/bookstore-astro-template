---
import BookCover from '../BookCover/BookCover.astro'
import Button from '../ui/Button/Button.astro'

const { imgUrl, title, author, price } = Astro.props
---

<div class="flex flex-col">
	<div class="flex h-72 justify-center mb-4">
		<BookCover src={imgUrl} alt={title} />
	</div>
	<div class="flex flex-col gap-2">
		<div>
			<a class="text-md font-bold" href="/product">{title}</a>
			<p class="text-xs text-slate-500">{author}</p>
		</div>
		<div class="flex items-center gap-2">
			<div class="flex text-xs text-amber-400">
				{
					new Array(5).fill('').map(() => (
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="currentColor"
							class="w-4 h-4"
						>
							<path
								fill-rule="evenodd"
								d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
								clip-rule="evenodd"
							/>
						</svg>
					))
				}
			</div>
			<span class="text-xs text-slate-500">367 reviews</span>
		</div>
		<div class="flex items-center gap-4 sm:gap-0 justify-between">
			<p class="text-lg font-bold">${price}</p>
			<Button size="sm">Add to cart</Button>
		</div>
	</div>
</div>
