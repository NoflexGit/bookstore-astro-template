---
import ProductCard from '../ProductCard/ProductCard.astro'

const { title, products } = Astro.props
---

{title && <h2 class="mb-4 text-2xl font-bold">{title}</h2>}
<div
	class="grid-cols-1 mt-4 grid sm:grid-cols-2 gap-8 sm:gap-12 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5"
>
	{
		products.map((book) => (
			<ProductCard
				imgUrl={book.imageUrl}
				price={book.price}
				title={book.title}
				author={book.author.name}
			/>
		))
	}
</div>
